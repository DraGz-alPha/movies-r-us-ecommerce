<div class="col s6 m4 l3">
  <div class="card" style="height: 630px">
    <div class="card-image waves-block waves-light">
      <% unless session[:cart].include?(movie.id.to_s) %>
        <%= link_to '<i class="material-icons">add_shopping_cart</i>'.html_safe, 
            add_to_cart_path(movie.id),
            class: "btn-floating halfway-fab waves-effect waves-light red",
            method: :post %>
      <% else %>
        <%= link_to '<i class="material-icons">remove_shopping_cart</i>'.html_safe, 
            remove_from_cart_path(movie.id, "home"),
            class: "btn-floating halfway-fab waves-effect waves-light blue",
            method: :delete %>
      <% end %>
      <img class="activator" src="<%= movie.poster %>">
    </div>
    <div class="card-content">
      <div class="row">
        <span class="card-title activator grey-text text-darken-4">
          <div class="col s12 m10 l10">
            <%= movie.title %>
          </div>
          <div class="col s12 m2 l2">
            <i class="material-icons right">
              more_vert
            </i>
          </div>
        </span>
      </div>
      <div class="card-action" style="position: absolute; bottom: 5px; right: 5px;">
        <b>
          <%= number_to_currency movie.price / 100.0 %>
        </b>
      </div>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">
        <%= movie.title %><i class="material-icons right">close</i>
      </span>
      <p>
        <i>
          <%= movie.description %>
        </i>
      </p>
      <p>
        <%= movie.release_date.strftime("%B %d, %Y") %>
      </p>
      <div>
        <%= link_to "View", movie, class: 'waves-effect waves-light btn' %>
        <% unless session[:cart].include?(movie.id.to_s) %>
          <%= link_to '<i class="material-icons">add_shopping_cart</i>'.html_safe, 
              add_to_cart_path(movie.id),
              class: "btn halfway-fab waves-effect waves-light red",
              method: :post %>
        <% else %>
          <%= link_to '<i class="material-icons">remove_shopping_cart</i>'.html_safe, 
              remove_from_cart_path(movie.id, "home"),
              class: "btn halfway-fab waves-effect waves-light blue",
              method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>