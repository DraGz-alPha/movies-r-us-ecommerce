<%= form_with(url: search_path, local: true, method: "get", class: 'search-form') do %>
  <div class="field has-addons">
    <div class="control">
      <div class="col s12 m5 l5">
        <%= text_field_tag(:title, nil, class: 'input', placeholder: 'Title') %>
      </div>
    </div>
    <div class="control">
      <div class="col s10 m5 l5">
        <%= select_tag(:genre_id, options_from_collection_for_select(@genres, "id", "name", params[:genre_id]), include_blank: "Any", class: 'form-control') %>
      </div>
    </div>
    <div class="control">
      <div class="col s2 m2 l2">
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
            <i class="material-icons">search</i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>