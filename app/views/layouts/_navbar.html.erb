<nav>
  <div class="nav-wrapper">
  <%= link_to "Movies R Us", root_path, class: "brand-logo" %>
    <a href="" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    <ul class="right hide-on-med-and-down">
      <li><%= link_to "About", "/about" %></li>
      <li><%= link_to "Contact", "/contact" %></li>
      <% if current_customer %>
        <li><%= link_to "Sign out", destroy_customer_session_path, method: :delete %></li>
        <% if current_customer.name.blank? %>
          <li><b>Welcome, <%= current_customer.email %></b></li>
        <% else %>
          <li><b>Welcome, <%= current_customer.name %></b></li>
        <% end %>
        <li>
          <%= link_to '<i class="material-icons">shopping_cart</i>'.html_safe, cart_path,
            class: "btn-floating waves-effect waves-light red"%><br>
        </li>
        <li>
          <div class="cart-badge">
            <h6><%= @cart.size %></h6>
          </div>
        </li>
      <% else %>
        <li><%= link_to "Sign in", new_customer_session_path  %></li>
      <% end %>
    </ul>
  </div>
</nav>

<ul class="sidenav" id="mobile-demo">
  <li>
    <% if current_customer %>
      <div class="user-view">
        <a href=""><span class="black-text name"><%= current_customer.name %></span></a>
        <a href=""><span class="black-text email"><%= current_customer.email %></span></a>
      </div>
      <%= link_to "Cart [#{@cart.size}]", cart_path %>
    <% end %>
  </li>
  <li><div class="divider"></div></li>
  <li><%= link_to "About", "/about" %></li>
  <li><%= link_to "Contact", "/contact" %></li>
  <% if current_customer %>
    <li><%= link_to "Sign out", destroy_customer_session_path, method: :delete %></li>
  <% else %>
    <li><%= link_to "Sign in", new_customer_session_path  %></li>
  <% end %>
</ul>